<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:paddingTop="120dp"
    android:paddingLeft="@dimen/spacing_medium"
    android:paddingBottom="@dimen/spacing_medium"
    android:paddingRight="@dimen/spacing_medium">

    <ImageView
        android:id="@+id/nav_header_user_img"
        android:layout_width="@dimen/user_image_size"
        android:layout_height="@dimen/user_image_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/user_picture_placeholder"
        android:layout_marginTop="16dp"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/nav_header_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/user_name"
        android:layout_toRightOf="@+id/nav_header_user_img"
        style="@style/AppTheme.TextView.Clickable.2.White"
        android:layout_marginTop="7dp"/>

    <TextView
        android:id="@+id/nav_header_log_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log out"
        android:layout_below="@+id/nav_header_user_name"
        android:layout_toRightOf="@+id/nav_header_user_img"
        style="@style/AppTheme.TextView.Clickable.1.White"
        android:layout_marginTop="-4dp"/>

</RelativeLayout>