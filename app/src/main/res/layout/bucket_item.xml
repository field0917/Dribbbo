<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="@dimen/card_view_elevation"
    card_view:cardCornerRadius="0dp"
    android:id="@+id/bucket_card_view">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/bucket_card_view_padding">

        <TextView
            android:id="@+id/bucket_number_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            tools:text="Bucket 0"
            android:textSize="18sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/bucket_shot_number_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="7 shots" />

    </LinearLayout>


    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/bucket_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:layout_marginEnd="@dimen/bucket_card_view_padding"
        android:layout_marginRight="@dimen/bucket_card_view_padding"/>

</android.support.v7.widget.CardView>