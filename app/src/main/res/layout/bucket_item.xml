<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="20dp"
    card_view:cardCornerRadius="0dp"
    android:id="@+id/bucket_card_view"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bucket_cover_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:src="@drawable/shot_image_placeholder"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/bucket_card_view_padding"
            android:layout_marginEnd="@dimen/bucket_card_view_padding">

            <TextView
                android:id="@+id/bucket_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                tools:text="Bucket 0"
                android:textSize="18sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/bucket_shot_number_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bucket_title_text_view"
                tools:text="7 shots" />

            <ImageView
                android:id="@+id/bucket_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_check_box_outline_blank_black_24dp" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>